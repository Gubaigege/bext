{
  "name": "bext",
  "contributors": [
    {
      "name": "ikkz",
      "url": "https://github.com/ikkz"
    },
    {
      "name": "lemon399",
      "url": "https://github.com/lemon399"
    }
  ],
  "scripts": {
    "start": "cross-env TAILWIND_MODE=watch umi dev",
    "build": "umi build",
    "analyze": "cross-env ANALYZE=1 umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@fluentui/react": "^8.42.0",
    "ahooks": "^2.10.12",
    "constate": "^3.3.0",
    "dayjs": "^1.10.7",
    "lodash-es": "^4.17.21",
    "react": "17.x",
    "react-dom": "17.x",
    "umi": "^3.5.20"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.5",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/shelljs": "^0.8.9",
    "@umijs/test": "^3.5.20",
    "cross-env": "^7.0.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "shelljs": "^0.8.4",
    "simple-git": "^2.47.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
